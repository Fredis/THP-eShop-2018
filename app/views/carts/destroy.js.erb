$(document).ready(function() {

	let content = "<%= @cart.items.count %>";

	$('.remove-data-<%=params[:id]%>').remove();
	$('.total-amount').html('$<%=@items.sum(:price)%>');

	$('.cart-count').html(content);
	$('.cart-count').fadeIn(500).css('background-color' , '#018786')

	if (parseInt(content) == 0) {
		$('#checkout_button').hide()
  }

});