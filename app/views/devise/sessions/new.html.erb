<div class="form-block p-30 light-gray-bg border-clear" style="margin-top: 50px; margin-bottom: 50px; margin-left: auto; margin-right: auto;">
  <h2 class="title">Log In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group has-feedback row">
    <label for="inputEmail" class="col-md-3 control-label text-md-right col-form-label">Email <span class="text-danger small">*</span></label>
      <div class="col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <i class="fa fa-envelope form-control-feedback pr-4"></i>
      </div>
  </div>

  <div class="form-group has-feedback row">
    <label for="inputPassword" class="col-md-3 control-label text-md-right col-form-label">Password <span class="text-danger small">*</span></label>
      <div class="col-md-8">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
        <i class="fa fa-lock form-control-feedback pr-4"></i>
      </div>
  </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group row">
        <div class="ml-md-auto col-md-9">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <br /><a href="<%= new_user_registration_path %>" style="color: blue;">Don't have an account? Sign up now!</a>
        </div>
      </div>
    <% end -%>

  <div class="form-group row">
    <div class="ml-md-auto col-md-9">
      <%= f.submit "Sign in", class: "btn btn-group btn-default btn-animated"  %>
    </div>
  </div>
  <% end %>
</div>


