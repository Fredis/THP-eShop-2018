<div class="form-block p-30 light-gray-bg border-clear" style="margin-top: 50px; margin-bottom: 50px; margin-left: auto; margin-right: auto;">
  <h2 class="title">Sign Up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
  <h5><%= devise_error_messages! %></h5>

    <div class="form-group has-feedback row">
      <label for="inputEmail" class="col-md-3 control-label text-md-right col-form-label">Email <span class="text-danger small">*</span></label>
        <div class="col-md-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <i class="fa fa-envelope form-control-feedback pr-4"></i>
        </div>
    </div>

    <div class="form-group has-feedback row">
      <label for="inputPassword" class="col-md-3 control-label text-md-right col-form-label">Password <span class="text-danger small">*</span></label>
        <div class="col-md-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
         <i class="fa fa-lock form-control-feedback pr-4"></i>
        </div>         
    </div>

    <div class="form-group has-feedback row">
      <label for="inputPassword" class="col-md-3 control-label text-md-right col-form-label">Password confirmation<span class="text-danger small">*</span></label>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
         <i class="fa fa-lock form-control-feedback pr-4"></i>
        </div>         
    </div>

      <div class="form-group row">
        <div class="ml-md-auto col-md-9">
          <a href="<%= new_user_session_path %>" style="color: blue;">Already have an account? Sign in now!</a>
        </div>
      </div>

  <div class="form-group row">
    <div class="ml-md-auto col-md-9">
    <%= f.submit "Sign up", class: "btn btn-group btn-default btn-animated" %>
    </div>
  </div>

<% end %>
</div>