<!-- main-container start -->
<!-- ================ -->
<section class="main-container">

	<div class="container">
		<div class="row">

			<!-- main start -->
			<!-- ================ -->
			<div class="main col-12">

				<!-- page-title start -->
				<!-- ================ -->
				<h1 class="page-title">Order recap</h1>
				<div class="separator-2"></div>
				<!-- page-title end -->

				<table class="table cart table-hover table-colored">
					<thead>
						<tr>
							<th>Product</th>
							<th>Price</th>
							<th>Quantity</th>
							<th></th>
							<th class="amount">Total </th>

						</tr>
					</thead>
					<% @items.each do |item| %>
					<tbody>
						<tr class="remove-data">
							<td class="product"><a href="shop-product.html"><%= item.title %></a> <small><%= item.description%></small></td>
							<td class="price">$<%= item.price%></td>
							<td class="quantity">
								<div class="form-group">
									<p>1</p>
								</div>
							</td>
							<td></td>
							<td class="amount">$<%=item.price%></td>
						</tr>
						<% end %>
						<tr>
							<td class="total-quantity" colspan="4">Total price :</td>
							<td class="total-amount">$<%=@items.sum(:price)%></td>
						</tr>


					</tbody>
				</table>
				<div class="text-right">
					<div class="stripe">
						<%= form_tag new_order_path do %>
						<article>
							<% if flash[:error].present? %>
							<div id="error_explanation">
								<p><%= flash[:error] %></p>
							</div>
							<% end %>
						</article>

						<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
						document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
						data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
						data-description="Payment's customer"
						data-amount="<%=@items.sum(:price) * 100%>"
						data-currency="usd"
						data-locale="auto">
						</script>
						<script>
						// Hide default stripe button, be careful there if you
						// have more than 1 button of that class
						document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
						</script>
						<button type="submit" class="btn btn-group btn-default stripe-button">Confirmer commande</button>
						<% end %>
					</div>

				</div>
				<!-- main end -->

			</div>
		</div>
	</section>
	<!-- main-container end -->
